<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="10dip"
        android:textColor="@color/textColor87"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="5dip"
        android:textColor="@color/textColor54"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/time"
        android:layout_marginBottom="15dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="10dip"
        android:ellipsize="end"
        android:maxLines="5"
        android:textColor="@color/textColor87"
        android:textSize="16sp" />

    <View
        android:id="@+id/line1"
        style="@style/line_h_style"
        android:layout_below="@id/content" />

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="35dip"
        android:layout_below="@id/line1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/comment"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textColor="@color/textColor54"
            android:textSize="14sp" />

        <View style="@style/line_v_style" />

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/prise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/button_prise_pressed_selector"
                android:drawablePadding="5dip"
                android:paddingLeft="20dip"
                android:paddingRight="20dip"
                android:textColor="@color/gray_to_orige"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        style="@style/line_h_style"
        android:layout_height="10dip"
        android:layout_below="@id/layout"
        android:background="@drawable/aaa" />

</RelativeLayout>