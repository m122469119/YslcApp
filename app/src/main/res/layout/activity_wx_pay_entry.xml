<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
   <!-- <include layout="@layout/include_toolbar"/>-->
    <include android:id = "@+id/toolbar"
        layout="@layout/include_toolbar"
        />
    <TextView
        android:gravity="center"
        android:text="@string/pay_success"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <ImageView
        android:layout_marginTop="50dp"
        android:src="@drawable/right_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:gravity="center"
        android:text="@string/order_pay_success"
        android:textSize="20sp"
        android:id="@+id/pay_result_info"
        android:layout_width="match_parent"
        android:layout_height="100dp" />
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="50dp">
        <TextView
            android:text="@string/order_num"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/order_num"
            android:text="1111111111111111111"
            android:textColor="@color/red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="50dp">
        <TextView
            android:text="@string/order_success_price"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/order_price"
            android:text="￥40.00"
            android:textColor="@color/red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id = "@+id/pay_result_button"
        android:background="@color/gotoVipButton"
        android:layout_margin="20dp"
        android:layout_gravity="center_horizontal"
        android:text="查看订单"
        android:textSize="20sp"
        />
</LinearLayout>