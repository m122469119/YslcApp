<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greyTrans2">

    <View
        style="@style/line_h_style"
        android:layout_height="3dip"
        android:layout_above="@+id/linear"
        android:background="@color/titleBg" />

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/buttomWhite"
        android:orientation="vertical"
        android:paddingBottom="15dip">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/shareWb"
                style="@style/shareTextStyle"
                android:drawableTop="@drawable/icon_sina"
                android:text="@string/wb" />

            <TextView
                android:id="@+id/shareQq"
                style="@style/shareTextStyle"
                android:drawableTop="@drawable/icon_qq"
                android:text="@string/qq" />

            <TextView
                android:id="@+id/shareWx"
                style="@style/shareTextStyle"
                android:drawableTop="@drawable/icon_weixin"
                android:text="@string/wx" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">

            <TextView
                android:id="@+id/shareZone"
                style="@style/shareTextStyle"
                android:drawableTop="@drawable/icon_qzone"
                android:text="@string/qqzone" />

            <TextView
                android:id="@+id/shareFriend"
                style="@style/shareTextStyle"
                android:drawableTop="@drawable/icon_cicle"
                android:text="@string/friend" />

        </LinearLayout>

        <Button
            android:id="@+id/cancel"
            style="@style/btnStyle"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="60dip"
            android:layout_marginRight="60dip"
            android:layout_marginTop="15dip"
            android:text="@string/cancelShare" />
    </LinearLayout>

</RelativeLayout><!-- From: file:/E:/android_studio/YslcApp/app/src/main/res/layout/dialog_share.xml -->