<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dip"
    android:padding="10dip">

    <ImageView
        android:id="@+id/img"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:contentDescription="@null"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher" />

    <RelativeLayout
        android:layout_marginLeft="10dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/img"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/numberbar"
            style="?android:progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:progress="0" />

        <TextView
            android:id="@+id/notificationInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/numberbar"
            android:layout_marginRight="10dip"
            android:text="@string/nowDownload"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/notificationTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/numberbar"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </RelativeLayout>

</RelativeLayout><!-- From: file:/E:/android_studio/YslcApp/app/src/main/res/layout/notification_download_apk.xml -->