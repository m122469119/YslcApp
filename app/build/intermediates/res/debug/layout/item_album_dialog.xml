<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dip">

    <ImageView
        android:id="@+id/albumImg"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        android:src="@drawable/default_error" />

    <TextView
        android:id="@+id/albumName"
        android:layout_width="match_parent"
        android:layout_height="30dip"
        android:layout_marginLeft="16dip"
        android:layout_toRightOf="@id/albumImg"
        android:gravity="center_vertical"
        android:maxLength="10"
        android:textColor="@color/textColor54"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/albumLen"
        android:layout_width="wrap_content"
        android:layout_height="30dip"
        android:layout_below="@id/albumName"
        android:layout_marginLeft="16dip"
        android:layout_toRightOf="@id/albumImg"
        android:gravity="center_vertical"
        android:maxLength="10"
        android:textColor="@color/textColor54"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/isCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:contentDescription="@null"
        android:src="@drawable/default_check_s" />

</RelativeLayout>
