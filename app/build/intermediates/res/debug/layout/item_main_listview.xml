<?xml version="1.0" encoding="utf-8"?>
<!--默认的listitem的布局，标题，图片，描述，时间-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/listview_selector"
    android:paddingBottom="7dip"
    android:paddingLeft="15dip"
    android:paddingRight="15dip"
    android:paddingTop="7dip">
<!--标题-->
    <TextView
        android:id="@+id/title"
        style="@style/listViewTextStyle"
        android:layout_marginBottom="5dip"
        android:singleLine="true"
        android:textColor="@color/textColor87"
        android:textSize="16sp" />
<!--图片-->
    <ImageView
        android:id="@+id/img"
        android:layout_width="85dip"
        android:layout_height="60dip"
        android:layout_below="@id/title"
        android:layout_marginRight="10dip"
        android:contentDescription="@null"
        android:scaleType="centerCrop" />
<!--描述-->
    <TextView
        android:id="@+id/content"
        style="@style/listViewTextStyle"
        android:layout_height="40dip"
        android:layout_below="@id/title"
        android:layout_toRightOf="@id/img"
        android:gravity="top"
        android:lineSpacingExtra="2dip"
        android:lines="2"
        android:singleLine="false"
        android:textColor="@color/textColor54"
        android:textSize="15sp" />
<!--时间-->
    <TextView
        android:id="@+id/time"
        style="@style/listViewTextStyle"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:gravity="bottom"
        android:textColor="@color/textColor54"
        android:textSize="13sp" />

</RelativeLayout><!-- From: file:/E:/android_studio/YslcApp/app/src/main/res/layout/item_main_listview.xml -->